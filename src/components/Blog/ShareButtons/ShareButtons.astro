---
import { Icon } from 'astro-icon';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex gap-4 justify-end items-center py-8">
  <p>Compartir en:</p>

  <a
    href=`https://www.facebook.com/sharer/sharer.php?u=${Astro.url.href}`
    aria-label="Compratir en Facebook"
    target="_blank"
    rel="noopener"
  >
    <Icon
      name="mdi:facebook"
      class="text-[#3b5998] w-[28px] h-[28px]"
    />
  </a>
  <a
    href=`https://twitter.com/intent/tweet?text=${title}&url=${Astro.url.href}&hashtags=#hathayolgaloberia`
    aria-label="Compratir en Twitter"
    target="_blank"
    rel="noopener"
  >
    <Icon
      name="mdi:twitter"
      class="text-[#00acee] w-[28px] h-[28px]"
    />
  </a>
  <a
    href=`https://api.whatsapp.com/send?text=text=${title}&url=${Astro.url.href}`
  >
    <Icon
      name="mdi:whatsapp"
      class="text-[#25D366] w-[28px] h-[28px]"
    />
  </a>
  <a
    href=`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url.href}`
  >
    <Icon
      name="mdi:linkedin"
      class="text-[#0e76a8] w-[28px] h-[28px]"
    />
  </a>
</div>
