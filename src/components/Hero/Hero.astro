---
import heroImg from '../../assets/images/hero/hero-img_opt.png';
import yoga1 from '../../assets/images/hero/yoga-1.jpg';
import yoga2 from '../../assets/images/hero/yoga-2.jpg';
import yoga3 from '../../assets/images/hero/yoga-3.jpg';
---

<div class="hero md:py-10">
  <div class="relative flex gap-4 md:px-20 h-full justify-center">
    <div class="w-11/12 lg:w-1/2 flex flex-col justify-center items-center">
      <p class="text-4xl lg:text-5xl font-bold text-cyan-950 font-dancing">
        Hatha Yoga Lobería
      </p>
      <p class="text-xl text-cyan-900 pt-4">Calma en el alma...</p>
      <img
        class="mx-auto"
        width="150"
        width="110"
        src={heroImg.src}
        alt="Hero Image"
      />
      <div class="contact pt-8">
        <p>
          Sumérgete en una experiencia única de bienestar y forma parte de
          nuestra Comunidad
        </p>
        <div class="mt-10 md:mt-20 flex justify-center w-full h-full">
          <a
            href="#subscriber-form"
            class="p-2 rounded bg-primary w-32 h-10 text-white text-center"
            >Únete</a
          >
          <a
            href="/hathayogaloberia/contacto#contact-form"
            class="ml-10 p-2 rounded bg-primary w-32 h-10 text-white text-center"
            >Contáctanos</a
          >
        </div>
      </div>
    </div>
    <div class="hidden lg:block relative w-1/2 mt-10 -translate-y-5">
      <img
        class="image absolute bottom-0 left-0 rounded-lg w-1/3 scale-110 object-cover h-1/3 shadow-lg"
        src={yoga1.src}
        alt="image"
      />

      <img
        class="image absolute top-0 right-0 rounded-lg w-1/3 scale-110 object-cover h-1/3 shadow-lg"
        src={yoga2.src}
        alt="image"
      />
      <img
        class="image absolute top-1/3 left-1/3 rounded-lg w-1/3 scale-110 object-cover h-1/3 shadow-lg"
        src={yoga3.src}
        alt="image"
      />
    </div>
  </div>
  <!-- <div
    class="absolute -bottom-0 -right-0 w-[300px] h-[300px] bg-pink-100/40 rounded-tl-3xl"
  >
  </div> -->
</div>

<style>
  .hero {
    height: calc(100vh - 70px);
  }
  @media (min-width: 1536px) {
    .hero {
      height: 800px;
    }
  }
  .contact {
    animation: 2s title-text ease-in-out;
  }
  @keyframes title-text {
    0% {
      transform: translateY(100px);
    }
    100% {
      transform: translateY(0);
    }
  }
  .image {
    animation: changeBackground 2s;
    animation-fill-mode: both;
  }
  .image:nth-of-type(1) {
    animation-delay: 0s;
    opacity: 0;
  }
  .image:nth-of-type(2) {
    animation-delay: 0s;
    opacity: 0;
  }
  .image:nth-of-type(3) {
    animation-delay: 1s;
    opacity: 0;
  }
  /* .image:nth-of-type(4) {
    animation-delay: 0s;
    opacity: 0;
  }
  .image:nth-of-type(5) {
    animation-delay: 1s;
    opacity: 0;
  } */

  @keyframes changeBackground {
    100% {
      opacity: 1;
    }
  }
</style>
