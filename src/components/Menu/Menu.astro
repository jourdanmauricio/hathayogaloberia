---
import { Icon } from 'astro-icon';
---

<div class="rect-left"></div>
<nav
  class="flex justify-between items-center gap-4 py-2 px-4 lg:px-20 bg-transparent w-full max-w-[1440px] mx-auto"
  id="menu"
>
  <!-- Menu mobile -->
  <input
    type="checkbox"
    id="menu-mobile"
    class="cursor-pointer hidden absolute left-0 peer"
  />
  <label
    for="menu-mobile"
    class="cursor-pointer block lg:hidden fixed z-50 right-4 text-cyan-950 peer-checked:text-slate-50"
  >
    <Icon
      name="mdi:menu"
      class="h-10 w-10"
    />
  </label>

  <!-- Fin menu mobile -->
  <div class="flex items-center gap-4">
    <Icon
      name="logo"
      class="w-10 h-10 text-primary"
    />

    <h1 class="text-slate-950 text-xl font-semibold text-center w-fit mx-auto">
      Hatha Yoga
      <span class="text-primary">Lober√≠a</span>
    </h1>
  </div>

  <div
    class="fixed top-0 bottom-0 lg:relative lg:top-auto w-full lg:w-fit -left-full lg:left-auto peer-checked:left-0 transition-all duration-500 z-40"
  >
    <div
      class="text-white lg:text-cyan-950 h-full lg:h-auto flex flex-col lg:flex-row items-center justify-center gap-8 backdrop-blur lg:backdrop-blur-none bg-black/40 lg:bg-transparent text-lg"
    >
      <a
        href="/hathayogaloberia/"
        class={`${
          Astro.url.pathname.replaceAll('/', '') === 'hathayogaloberia'
            ? 'text-secondary'
            : ''
        } menu__item anim__bottom to__center`}
        >Home</a
      >
      <a
        class={`${
          Astro.url.pathname.replaceAll('/', '') ===
          'hathayogaloberiaacerca-de-mi'
            ? 'text-secondary'
            : ''
        } menu__item anim__bottom to__center`}
        href="/hathayogaloberia/acerca-de-mi/"
        >Acerca de mi</a
      >
      <a
        class={`${
          Astro.url.pathname.replaceAll('/', '') ===
          'hathayogaloberianuestras-clases'
            ? 'text-secondary'
            : ''
        } menu__item anim__bottom to__center`}
        href="/hathayogaloberia/nuestras-clases/"
        >Clases</a
      >
      <a
        class={`${
          Astro.url.pathname
            .replaceAll('/', '')
            .includes('hathayogaloberiaposts')
            ? 'text-secondary'
            : ''
        } menu__item anim__bottom to__center`}
        href="/hathayogaloberia/posts/1/"
        >Blog
      </a>
      <a
        class={`${
          Astro.url.pathname.replaceAll('/', '') === 'hathayogaloberiacontacto'
            ? 'text-secondary'
            : ''
        } menu__item anim__bottom to__center`}
        href="/hathayogaloberia/contacto/"
        >Contacto</a
      >
    </div>
  </div>
</nav>

<style>
  /**********************/
  /***   ANIMATIONS   ***/
  /**********************/
  .menu__item {
    position: relative;
    display: block;
    /* padding: 4px 8px; */
  }
  .anim__bottom::after {
    content: '';
    position: absolute;
    display: inline-block;
    bottom: -1px;
    width: 0%;
    text-align: center;
    background: var(--secondary-color);
    height: 1px;
    transition:
      width 0.5s ease,
      left 0.5s ease,
      right 0.5s ease;
  }
  .anim__bottom:hover::after {
    width: 100%;
  }
  .to__center::after {
    left: 50%;
  }
  .to__center:hover::after {
    left: 0%;
  }
</style>

<style>
  .rect-left {
    position: absolute;
    overflow: hidden;
    top: 100px;
    left: -80px;
    height: 50px;
    width: 100%;
    background: linear-gradient(
      90deg,
      rgba(110, 31, 131, 0.1) 0%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: rotate(-25deg);
  }
</style>
