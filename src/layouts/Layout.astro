---
import '@fontsource/poppins';
import '@fontsource/roboto';
import '@fontsource-variable/dancing-script';
import Footer from '../components/Footer/Footer.astro';
import Menu from '../components/Menu/Menu.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/hathayogaloberia/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gradient-to-r from-pink-50 to-pink-100 mx-auto">
    <Menu />
    <div class="max-w-[1440px] mx-auto">
      <slot />
    </div>
    <Footer />
    <style is:global>
      :root {
        --title-font: roboto;
        --primary-font: poppins;
        --dancing-font: 'Dancing Script Variable';
        --primary-color: #082f49; /* Sky-900 */
        --secondary-color: #0d9488; /* Teal-600 */
        --menu-heigth: 3.5rem; /* 56px */
      }
      * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
      }

      html,
      body {
        /* max-width: 1440px; */
        margin: 0 auto;
        /* scroll-behavior: smooth; */
        font-family: var(--primary-font);
        /* background-color: #e2e8f0; */
        font-size: 1rem;
      }

      h1 {
        @apply font-title;
      }
      .btn {
        @apply bg-primary w-fit rounded text-slate-50;
      }
    </style>
  </body>
</html>
