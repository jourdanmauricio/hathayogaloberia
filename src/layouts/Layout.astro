---
import '@fontsource/poppins';
import '@fontsource/roboto';
import '@fontsource-variable/dancing-script';
import Footer from '../components/Footer/Footer.astro';
import Menu from '../components/Menu/Menu.astro';
import { ViewTransitions } from 'astro:transitions';
import logo from '../assets/logo.jpeg';

const URL = import.meta.env.URL;

interface Props {
  title: string;
  description?: string;
  image?: string;
  slug: string;
}

const {
  title,
  description = 'Hatha Yoga Lober√≠a',
  image = '/assets/hathayogaloberia.jpg',
  slug,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="canonical"
      href=`${URL}/${slug}/`
    />
    <meta
      name="description"
      content={description}
    />
    <!-- Twitter Card data -->
    <meta
      name="twitter:card"
      content="summary"
    />
    <meta
      name="twitter:site"
      content="@publisher_handle"
    />
    <meta
      name="twitter:title"
      content={title}
    />
    <meta
      name="twitter:description"
      content={description}
    />
    <meta
      name="twitter:creator"
      content="@author_handle"
    />
    <!-- Twitter Summary card images. Igual o superar los 200x200px -->
    <meta
      name="twitter:image"
      content=`<a href=${image}>{image}</a>`
    />
    <!-- Open Graph data -->
    <meta
      property="og:title"
      content={title}
    />
    <meta
      property="og:type"
      content="article"
    />
    <!-- Ver si agregar baseurl -->
    <meta
      property="og:url"
      content={slug}
    />
    <meta
      property="og:image"
      content={image}
    />
    <meta
      property="og:description"
      content={description}
    />
    <!-- <meta
      property="og:site_name"
      content="Nombre de la web, i.e. Moz"
      property="fb:admins"
      content="ID de Facebook"
    /> -->
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/jpeg"
      href={logo.src}
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gradient-to-r from-pink-50 to-pink-100 mx-auto">
    <Menu />
    <div class="max-w-[1440px] mx-auto">
      <slot />
    </div>
    <Footer />
    <style is:global>
      :root {
        --title-font: roboto;
        --primary-font: poppins;
        --dancing-font: 'Dancing Script Variable';
        --primary-color: #082f49; /* Sky-900 */
        --secondary-color: #0d9488; /* Teal-600 */
        --menu-heigth: 3.5rem; /* 56px */
      }
      * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
      }

      html,
      body {
        /* max-width: 1440px; */
        margin: 0 auto;
        scroll-behavior: smooth;
        font-family: var(--primary-font);
        /* background-color: #e2e8f0; */
        font-size: 1rem;
      }

      h1 {
        @apply font-title;
      }
      .btn {
        @apply bg-primary w-fit rounded text-slate-50;
      }
    </style>
  </body>
</html>
